---
interface Props {
  topic: string;
}

const { topic } = Astro.props;

const topicColors = {
  'science': 'bg-green-100 text-green-800 dark:bg-green-800/30 dark:text-green-300',
  'space': 'bg-indigo-100 text-indigo-800 dark:bg-indigo-800/30 dark:text-indigo-300',
  'national-security': 'bg-red-100 text-red-800 dark:bg-red-800/30 dark:text-red-300',
  'cyber-security': 'bg-blue-100 text-blue-800 dark:bg-blue-800/30 dark:text-blue-300',
  'hybrid-warfare': 'bg-purple-100 text-purple-800 dark:bg-purple-800/30 dark:text-purple-300',
};

const topicNames = {
  'science': 'Science',
  'space': 'Space',
  'national-security': 'National Security',
  'cyber-security': 'Cyber Security',
  'hybrid-warfare': 'Hybrid Warfare',
};

const colorClass = topicColors[topic] || 'bg-gray-100 text-gray-800 dark:bg-gray-800/30 dark:text-gray-300';
const displayName = topicNames[topic] || topic;
---

<a href={`/${topic}`} class={`inline-flex px-3 py-1 rounded-full text-xs font-medium ${colorClass} hover:opacity-80 transition-opacity duration-200`}>
  {displayName}
</a>