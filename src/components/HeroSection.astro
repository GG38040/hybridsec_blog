<section class="relative h-[80vh] min-h-[600px] overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-primary-500 to-secondary-500 opacity-90"></div>
  <img 
    src="https://images.pexels.com/photos/41162/moon-landing-apollo-11-nasa-buzz-aldrin-41162.jpeg" 
    alt="Hero background" 
    class="absolute inset-0 w-full h-full object-cover"
    fetchpriority="high"
  />
  
  <div class="relative h-full flex items-center">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl animate-fade-in">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-6">
          Insights for a Complex World
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mb-8">
          Expert analysis on science, space, and global security challenges that shape our future.
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href="/science" 
            class="bg-white text-primary-500 hover:bg-gray-100 transition-colors duration-200 font-medium py-3 px-6 rounded-lg"
          >
            Explore Topics
          </a>
          <a 
            href="#newsletter" 
            class="bg-transparent border-2 border-white text-white hover:bg-white/10 transition-colors duration-200 font-medium py-3 px-6 rounded-lg"
          >
            Subscribe
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-0 w-full">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 200">
      <path 
        fill="#f8fafc" 
        fill-opacity="1" 
        d="M0,128L80,144C160,160,320,192,480,186.7C640,181,800,139,960,128C1120,117,1280,139,1360,149.3L1440,160L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"
        class="dark:fill-gray-900"
      ></path>
    </svg>
  </div>
</section>